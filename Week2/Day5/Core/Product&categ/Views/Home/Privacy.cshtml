@model Category


<div class="d-flex justify-content-around ">
    <div>
        <h1>New Product</h1>
        <form asp-action="CreateCategorie" asp-controller="Home" method="post">
            <div class="form-group mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <button class="btn btn-outline-info w-100">Add Product</button>
        </form>
    </div >
    @await Html.PartialAsync("_AllCategories")
</div>
